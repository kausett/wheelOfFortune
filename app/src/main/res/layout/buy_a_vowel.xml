<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="390sp"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:background="@mipmap/logincontainer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy a vowel for 300$"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:textColor="@color/colorGold"
                android:fontFamily="@font/zorque"
                android:textSize="25sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10sp">

                <Button
                    android:id="@+id/vowelA"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:backgroundTint="@color/bg_wheel"
                    android:fontFamily="@font/zorque"
                    android:onClick="buyVowel"
                    android:text="A"
                    android:textColor="@color/colorGold"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/vowelE"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:backgroundTint="@color/bg_wheel"
                    android:fontFamily="@font/zorque"
                    android:onClick="buyVowel"
                    android:text="E"
                    android:textColor="@color/colorGold"
                    android:textSize="40sp" />
                <Button
                    android:id="@+id/vowelI"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:backgroundTint="@color/bg_wheel"
                    android:text="I"
                    android:onClick="buyVowel"
                    android:textColor="@color/colorGold"
                    android:fontFamily="@font/zorque"
                    android:textSize="40sp"
                    />
                <Button
                    android:id="@+id/vowelO"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:backgroundTint="@color/bg_wheel"
                    android:text="O"
                    android:onClick="buyVowel"
                    android:textColor="@color/colorGold"
                    android:fontFamily="@font/zorque"
                    android:textSize="40sp"
                    />
                <Button
                    android:id="@+id/vowelU"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:backgroundTint="@color/bg_wheel"
                    android:text="U"
                    android:onClick="buyVowel"
                    android:textColor="@color/colorGold"
                    android:fontFamily="@font/zorque"
                    android:textSize="40sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>