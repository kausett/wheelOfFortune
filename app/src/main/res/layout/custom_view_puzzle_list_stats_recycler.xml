<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_wheel"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:background="@mipmap/logincontainer"
            android:padding="8dp">


            <TextView
                android:id="@+id/txtPzlUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView7"
                android:layout_alignBottom="@+id/textView7"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/textView11"
                android:fontFamily="@font/zorque"
                android:text="Player UserName:"
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/zorque"
                android:text="Player UserName:"
                android:textColor="@color/colorGold" />


            <TextView
                android:id="@+id/txtPuzzleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView11"
                android:layout_alignStart="@+id/txtPzlUserName"
                android:fontFamily="@font/zorque"
                android:text="Number of Players:"
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView11"
                android:layout_below="@+id/textView11"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/zorque"
                android:text="Top puzzle price::"
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/zorque"
                android:text="Puzzle Id:"
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/txtNoOfPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView15"
                android:layout_alignStart="@+id/txtPzlUserName"
                android:fontFamily="@font/zorque"
                android:text="Number of Players:"
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView10"
                android:layout_below="@+id/textView10"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/zorque"
                android:text="Number of players:"
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/txtTopPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView15"
                android:layout_alignBottom="@+id/textView15"
                android:layout_alignStart="@+id/txtNoOfPlayers"
                android:fontFamily="@font/zorque"
                android:text="Top price For Puzzle "
                android:textColor="@color/colorGold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>