<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payPuzzleContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wofbackground"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context="edu.gatech.seclass.sdpguessit.PlayPuzzle">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="67dp"
            android:orientation="vertical"
            android:background="@mipmap/logincontainer">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:fontFamily="@font/zorque"
                android:gravity="center"
                android:text="Username"
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/txtPuzzleUsername"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:fontFamily="@font/zorque"
                android:gravity="center"
                android:text="Kausett"
                android:textColor="@color/colorGold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/woflogo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@mipmap/logincontainer">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:fontFamily="@font/zorque"
                android:gravity="center"
                android:text="Total Price "
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/txtTotalPrize"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/zorque"
                android:gravity="center"
                android:text="$1000"
                android:textColor="@color/colorGold" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="401dp"
        android:layout_height="220dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20sp"
                android:layout_marginBottom="20sp"
                android:layout_gravity="end">
                <Button
                    android:id="@+id/txtExitGame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Exit"
                    android:backgroundTint="@color/colorGold"
                    android:fontFamily="@font/zorque"
                    android:textSize="18sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/a1"
                    android:tag="a1"
                    android:layout_width="35sp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/zorque"
                    android:textSize="18sp"
                    android:backgroundTint="@color/colorPrimary" />

                <Button
                    android:id="@+id/a2"
                    android:layout_width="35sp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/zorque"
                    android:textSize="18sp"
                    android:backgroundTint="@color/colorPrimary"/>

                <Button
                    android:id="@+id/a3"
                    android:layout_width="35sp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/zorque"
                    android:textSize="18sp"
                    android:backgroundTint="@color/colorPrimary"/>

                <Button
                    android:id="@+id/a4"
                    android:layout_width="35sp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/zorque"
                    android:textSize="18sp"
                    android:backgroundTint="@color/colorPrimary"/>

                <Button
                    android:id="@+id/a5"
                    android:layout_width="35sp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/colorPrimary"/>

                <Button
                    android:id="@+id/a6"
                    android:layout_width="35sp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/zorque"
                    android:textSize="18sp"
                    android:backgroundTint="@color/colorPrimary"/>

                <Button
                    android:id="@+id/a7"
                    android:layout_width="35sp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/zorque"
                    android:textSize="18sp"
                    android:backgroundTint="@color/colorPrimary"/>

                <Button
                    android:id="@+id/a8"
                    android:layout_width="35sp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/zorque"
                    android:textSize="18sp"
                    android:backgroundTint="@color/colorPrimary"/>

                <Button
                    android:id="@+id/a9"
                    android:layout_width="35sp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/zorque"
                    android:textSize="18sp"
                    android:backgroundTint="@color/colorPrimary"/>

                <Button
                    android:id="@+id/a10"
                    android:layout_width="35sp"
                    android:fontFamily="@font/zorque"
                    android:textSize="18sp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/a11"
                android:layout_width="35sp"
                android:layout_height="45dp"
                android:fontFamily="@font/zorque"
                android:textSize="18sp"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/a12"
                android:layout_width="35sp"
                android:fontFamily="@font/zorque"
                android:textSize="18sp"
                android:layout_height="45dp"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/a13"
                android:layout_width="35sp"
                android:fontFamily="@font/zorque"
                android:textSize="18sp"
                android:layout_height="45dp"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/a14"
                android:layout_width="35sp"
                android:layout_height="45dp"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/a15"
                android:layout_width="35sp"
                android:layout_height="45dp"
                android:fontFamily="@font/zorque"
                android:textSize="18sp"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/a16"
                android:layout_width="35sp"
                android:layout_height="45dp"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/a17"
                android:layout_width="35sp"
                android:layout_height="45dp"
                android:fontFamily="@font/zorque"
                android:textSize="18sp"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/a18"
                android:layout_width="35sp"
                android:layout_height="45dp"
                android:fontFamily="@font/zorque"
                android:textSize="18sp"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/a19"
                android:layout_width="35sp"
                android:layout_height="45dp"
                android:fontFamily="@font/zorque"
                android:textSize="18sp"
                android:backgroundTint="@color/colorPrimary"/>
            <Button
                android:id="@+id/a20"
                android:layout_width="35sp"
                android:layout_height="45dp"
                android:fontFamily="@font/zorque"
                android:textSize="18sp"
                android:backgroundTint="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/gameSpinner"
        android:layout_width="393dp"
        android:layout_height="285dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:layout_margin="20sp"
            android:id="@+id/randomSpinner"
            android:layout_width="142dp"
            android:layout_height="132dp"
            android:background="@mipmap/logincontainer"
            android:fontFamily="@font/zorque"
            android:gravity="center"
            android:text="$100"
            android:textColor="@color/colorGold"
            android:textSize="25sp"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="327dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnBuyVoewl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/buyvowel"
                android:scaleType="fitXY"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="507dp" />

            <ImageButton
                android:id="@+id/tapToSpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/taptospin"
                android:scaleType="fitXY"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="507dp" />

            <ImageButton
                android:id="@+id/tapToSolve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:background="@mipmap/solve"
                android:scaleType="fitXY"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="507dp" />

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
