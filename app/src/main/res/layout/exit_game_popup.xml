<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:orientation="vertical"
    android:layout_height="215dp"
    android:layout_gravity="center"
    android:background="@mipmap/logincontainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="290sp"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to exit"
            android:textAlignment="center"
            android:layout_marginBottom="20sp"
            android:fontFamily="@font/zorque"
            android:textColor="@color/colorGold"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btnQUitGame"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="YES"
                android:textAlignment="center"
                android:fontFamily="@font/zorque"
                android:backgroundTint="@color/colorGold"
                android:textSize="18sp"
                />

            <Button
                android:id="@+id/btnContinuePZGame"
                android:layout_width="150sp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAlignment="center"
                android:fontFamily="@font/zorque"
                android:backgroundTint="@color/colorGold"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
