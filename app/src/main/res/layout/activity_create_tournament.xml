<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wofbackground"
    tools:context="edu.gatech.seclass.sdpguessit.CreateTournament">


    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="199dp"
        android:layout_height="177dp"
        android:layout_marginEnd="111dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/woflogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="388dp"
        android:layout_height="340dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/logincontainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />


    <LinearLayout
        android:id="@+id/tournamentSelectContainer"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <EditText
            android:id="@+id/tournamentName"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginBottom="20sp"
            android:background="@color/colorGold"
            android:ems="10"
            android:hint="Tournament Name"
            android:inputType="textPersonName"
            android:padding="10sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Tournaments"
            android:textSize="18sp"
            android:fontFamily="@font/zorque"
            android:backgroundTint="@color/colorGold"
            android:id="@+id/chooseTournamentList"/>


    </LinearLayout>


    <TextView
        android:id="@+id/textView4"
        android:layout_width="337dp"
        android:layout_height="33dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/zorque"
        android:text="Choose Tournament"
        android:textAlignment="center"
        android:textColor="@color/colorGold"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="337dp"
        android:layout_height="49dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/imageView13"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/tournamentSelectContainer">

        <Button

            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorGold"
            android:fontFamily="@font/zorque"
            android:text="Create" />

        <Button
            android:id="@+id/btnCancelCreateTournament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorGold"
            android:fontFamily="@font/zorque"
            android:text="Cancel" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
