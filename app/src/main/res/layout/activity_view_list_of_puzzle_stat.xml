<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/wofbackground"
    tools:context="edu.gatech.seclass.sdpguessit.ViewListOfPuzzleStatActivity">

        <TextView
            android:paddingTop="20sp"
            android:paddingBottom="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorGold"
            android:textSize="15sp"
            android:textAlignment="center"
            android:fontFamily="@font/zorque"
            android:text="Puzzle Statistic for All Puzzles" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:id="@+id/userStat"
        />

    <Button
        android:id="@+id/btnBackToStatshome"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorGold"
        android:fontFamily="@font/zorque"
        android:text="Back"/>
</LinearLayout>
