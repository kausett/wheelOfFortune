<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_wheel"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:background="@mipmap/logincontainer"
            android:padding="8dp">


            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="29dp"
                android:layout_marginStart="22dp"
                android:fontFamily="@font/zorque"
                android:text="Player UserName:"
                android:textColor="@color/colorGold" />


            <TextView
                android:id="@+id/txtUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/txtPuzzleId"
                android:layout_marginBottom="29dp"
                android:fontFamily="@font/zorque"
                android:text="Player UserName:"
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/txtPuzzleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textviewid"
                android:layout_alignBottom="@+id/textviewid"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="27dp"
                android:fontFamily="@font/zorque"
                android:text="Number of Players:"
                android:textColor="@color/colorGold" />

            <TextView
                android:id="@+id/textviewid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textview1"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/zorque"
                android:text="Puzzle Id:"
                android:textColor="@color/colorGold" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>